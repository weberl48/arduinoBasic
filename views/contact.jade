extends layout

block content
  nav.navbar.navbar-default
    .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Arduino Weather
        |     
        div
          ul.nav.navbar-nav
            li
              a(href='/') Home
            |         
            li
              a(href='/data') Data
            |         
            li.active
              a(href='/contact') Contact
            |         
            li
              a(href='https://www.linkedin.com/in/weberle') LinkedIn
            li
              a(href="https://github.com/weberl48") Github
  h3 #{message}
  form(method="post" action="/contact")
    .form-group
      label(for="name") Name
      input(type="text" name="name"  placeholder="Name" class="form-control")
    .form-group
      label(for="subject") Subject
      input(type="text" name="subject"  placeholder="subject" class="form-control")
    .form-group
      label(for="message") Message
      textarea( name="body" class="form-control")
    .form-group
      label(for="email") Email
      input(type="email" name="email" class="form-control")
    .form-group
      input(type="submit" value="contact" class="form-control")
